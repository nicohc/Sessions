<h3>
  Liste des inscrits :
</h3>
<table>
  <tr>
    <th>ID du user</th>
    <th>Prénom</th>
    <th>Email</th>
  </tr>
  <br>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %> </td>
    <td><%= user.email %> </td>
    <td><%= link_to " Voir le profil ", user_path(user) %></td>
    <td><%= link_to " Editer ", edit_user_path(user) %></td>
    <td><%= link_to ' Detruire ', user_path(user),
            method: :delete,
            data: { confirm: 'Etes vous sûr de votre acte irréversible ?' } %></td>

  </tr>
  <% end %>
</table>
<br><br>
<%= link_to "Inscrire un nouveau user", '/users/new' %>
